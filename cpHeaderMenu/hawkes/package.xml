<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE package SYSTEM "DTD/package.dtd">
<package name="net.hawkes.advancedpagemenu">

        <packageinformation>
                <packagename>Advanced Page Menu System</packagename>
                <packagename language="de">Erweitertes Seitenmenü</packagename>
                <packagename language="de-informal">Erweitertes Seitenmenü</packagename>
                <packagedescription>This plugin replaces the normal page menu and replaces it with an extended TransMenu powered menu. It also features an extended menu administration.</packagedescription>
                <packagedescription language="de">Dieses Plugin ersetzt das normale Seitenmenü mit einem erweiterten TransMenu gestützten Menü. Ebenso wird eine erweiterte Menüverwaltung mitgeliefert.</packagedescription>
                <packagedescription language="de-informal">Dieses Plugin ersetzt das normale Seitenmenü mit einem erweiterten TransMenu gestützten Menü. Ebenso wird eine erweiterte Menüverwaltung mitgeliefert.</packagedescription>
                <version>1.1.0 Alpha 1</version>
                <date>2009-08-05</date>
                <isunique>1</isunique>
                <standalone>0</standalone>
                <plugin>com.woltlab.wcf.data.page.headerMenu</plugin>
        </packageinformation>

        <authorinformation>
                <author>Oliver Kliebisch</author>
                <authorurl>http://www.oliver-kliebisch.de</authorurl>
        </authorinformation>

        <requiredpackages>
                <requiredpackage minversion="1.1.0 Beta 3">com.woltlab.wcf</requiredpackage>
                <requiredpackage minversion="1.1.0 Beta 3">com.woltlab.wcf.data.page.headerMenu</requiredpackage>
                <requiredpackage minversion="1.0.0 Beta 3">com.woltlab.wcf.acp.display.pageMenu</requiredpackage>
                <requiredpackage minversion="1.1.0 Beta 3">com.woltlab.wcf.acp.display.style</requiredpackage>
        </requiredpackages>

        <excludedpackages>
                <excludepackage>net.hawkes.advancedheadermenu</excludepackage>
        </excludedpackages>

        <instructions type="install">
                <acptemplates>acptemplates.tar</acptemplates>
                <acpmenu>acpmenu.xml</acpmenu>
                <eventlistener>eventlistener.xml</eventlistener>
                <files>files.tar</files>                
                <languages languagecode="de">de.xml</languages>                
                <options>options.xml</options>
                <packageinstallationplugins>pip.tar</packageinstallationplugins>
                <script>acp/advancedPageMenuInstall.php</script>
                <sql>install.sql</sql>
                <templatepatch>patch.diff</templatepatch>
                <templates>templates.tar</templates>
                <styleattributes>styleattributes.xml</styleattributes>
        </instructions>
</package>